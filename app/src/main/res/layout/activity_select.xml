<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dustin_domas_assignment.simon02.SelectActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Game"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="40sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Version II"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/activity2_button"
        android:fontFamily="casual"
        android:textStyle="bold"

        android:textColor="#ffc81515"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/activity1_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:text="Version III"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/activity3_button"

        android:fontFamily="casual"
        android:textStyle="bold"

        android:textColor="#ffc81515"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"

        android:layout_below="@+id/activity2_button"
        android:layout_alignLeft="@+id/activity2_button"
        android:layout_alignStart="@+id/activity2_button"
        android:layout_marginTop="40dp" />

    <Button
        android:text="Version I"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/activity1_button"
        android:fontFamily="casual"
        android:textStyle="bold"

        android:textColor="#ffc81515"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/activity2_button"
        android:layout_alignStart="@+id/activity2_button" />

</RelativeLayout>
